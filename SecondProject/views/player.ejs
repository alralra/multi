    <script>
      function toggleHero(clickedHero) {
        var heroes = document.querySelectorAll(".hero");

        // 클릭된 요소인지 확인
        var isClicked = clickedHero.classList.contains("clicked");

        // 클릭된 요소가 아닌 다른 요소들을 숨김
        for (var i = 0; i < heroes.length; i++) {
          if (heroes[i] !== clickedHero) {
            heroes[i].style.display = "none";
          }
        }

        // 클릭된 요소인 경우
        if (!isClicked) {
          // 클릭된 요소의 설명란만 보이도록 설정
          var clickedDescription = clickedHero.querySelector(
            ".hero-description"
          );
          clickedDescription.style.display = "block";

          // 클릭된 요소에 clicked 클래스 추가
          clickedHero.classList.add("clicked");

          // 클릭된 요소를 화면 중앙으로 이동
          clickedHero.style.position = "absolute";
          clickedHero.style.left = "50%";
          clickedHero.style.top = "50%";
          clickedHero.style.transform =
            "translate(-50%, -50%) skewX(-14deg) scale(3.6)";
        } else {
          // 클릭된 요소를 다시 클릭한 경우 모든 요소를 보이도록 설정
          for (var i = 0; i < heroes.length; i++) {
            heroes[i].style.display = "block";
            heroes[i].style.position = "";
            heroes[i].style.left = "";
            heroes[i].style.top = "";
            heroes[i].style.transform = "";
          }

          // 클릭된 요소의 clicked 클래스 제거
          clickedHero.classList.remove("clicked");
        }
      }
