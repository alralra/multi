    <script>
      // Function to calculate remaining time until the match ends
      function calculateRemainingTime(startTime, duration) {
        const now = new Date();
        const start = new Date(startTime);
        const end = new Date(start.getTime() + duration * 60000);
        const remainingTime = Math.max(0, end - now);
        return remainingTime;
      }

      // Update match status
      function updateMatchStatus() {
        const startTime = new Date("2024-03-09T15:00:00"); // Replace with actual start time
        const duration = 90; // Duration of the match in minutes
        const remainingTime = calculateRemainingTime(startTime, duration);

        if (remainingTime > 0) {
          const hours = Math.floor(remainingTime / (1000 * 60 * 60));
          const minutes = Math.floor(
            (remainingTime % (1000 * 60 * 60)) / (1000 * 60)
          );
          const seconds = Math.floor((remainingTime % (1000 * 60)) / 1000);
          document.getElementById("match-status").innerText =
            hours + "h " + minutes + "m " + seconds + "s remaining";
        } else {
          document.getElementById("match-status").innerText = "Match ended";
        }
      }

      // Update match status every second
      setInterval(updateMatchStatus, 1000);

      // Initial update
      updateMatchStatus();
